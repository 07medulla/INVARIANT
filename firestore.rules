rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Canonical invariant audit log — append-only by Cloud Functions
    match /invariant_audit/{document} {
      allow create: if request.auth == null && request.time != null;
      allow read, update, delete: if false;
    }

    // User profiles — users can read/update self, admins manage all
    match /user_profiles/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && get(/databases/$(database)/documents/user_profiles/$(request.auth.uid)).data.role == 'admin';
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/user_profiles/$(request.auth.uid)).data.role == 'admin');
      allow delete: if false;
    }

    // Chat sessions scoped to owner
    match /chat_sessions/{sessionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    // Messages are immutable append-only entries inside a chat session
    match /chat_sessions/{sessionId}/messages/{messageId} {
      allow create, read: if request.auth != null && get(/databases/$(database)/documents/chat_sessions/$(sessionId)).data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Cached business data is read-only from clients; written via service accounts
    match /business_data_cache/{docId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/user_profiles/$(request.auth.uid)).data.role in ['admin', 'recruiter', 'hiring_manager'];
      allow write: if false;
    }

    // System configuration flags
    match /system_config/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/user_profiles/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
